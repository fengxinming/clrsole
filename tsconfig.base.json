{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "newLine": "LF",
    "strict": true,
    
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ]
  }
}